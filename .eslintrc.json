{
	"root": true,
	"env": { "browser": true },
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"ignorePatterns": ["dist", ".eslintrc.cjs"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": true
	},
	"rules": {
		"@typescript-eslint/no-require-imports": "off"
	}
}
